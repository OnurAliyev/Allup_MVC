@model Product
@{
    List<Category> categories = ViewBag.Categories;
    List<Brand> brands = ViewBag.Brands;
}
<div class="container-fluid">
    <h1>Update</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product Code</label>
            <input asp-for="ProductCode" class="form-control">
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Cost Price</label>
            <input asp-for="CostPrice" class="form-control">
            <span asp-validation-for="CostPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Sale Price</label>
            <input asp-for="SalePrice" class="form-control">
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">DiscountPercent</label>
            <input asp-for="DiscountPercent" class="form-control">
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">StockCount</label>
            <input asp-for="StockCount" class="form-control">
            <span asp-validation-for="StockCount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(categories,"Id","Name"))"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
            <select asp-for="BrandId" asp-items="@(new SelectList(brands,"Id","Name"))"></select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">IsBestSeller</label>
            <input asp-for="IsBestSeller" class="form-control">
            <span asp-validation-for="IsBestSeller" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">IsFeatured</label>
            <input asp-for="IsFeatured" class="form-control">
            <span asp-validation-for="IsFeatured" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">IsNew</label>
            <input asp-for="IsNew" class="form-control">
            <span asp-validation-for="IsNew" class="text-danger"></span>
        </div>
        <div class="mb-3">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">IsDeleted</label>
            <input asp-for="IsDeleted" class="form-control">
            <span asp-validation-for="IsDeleted" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Cover Image</label>
            <input asp-for="CoverImageFile" class="form-control">
            <span asp-validation-for="CoverImageFile" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Hover Image</label>
            <input asp-for="HoverImageFile" class="form-control">
            <span asp-validation-for="HoverImageFile" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Image Files</label>
            <input asp-for="ImageFiles" class="form-control">
            <span asp-validation-for="ImageFiles" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-info">Save and Update</button>
    </form>
</div>