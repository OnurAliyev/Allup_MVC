@model Slider
<div class="container-fluid">
    <h1>Update</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">FirstTitle</label>
            <input asp-for="FirstTitle" class="form-control">
            <span asp-validation-for="FirstTitle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">SecondTitle</label>
            <input asp-for="SecondTitle" class="form-control">
            <span asp-validation-for="SecondTitle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">RedirectUrl</label>
            <input asp-for="RedirectUrl" class="form-control">
            <span asp-validation-for="RedirectUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">RedirectUrlText</label>
            <input asp-for="RedirectUrlText" class="form-control">
            <span asp-validation-for="RedirectUrlText" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Deactive</label>
            <input asp-for="IsDeleted" class="form-control">
            <span asp-validation-for="IsDeleted" class="text-danger"></span>
        </div>
        <div>
            <img src="~/uploads/sliders/@Model.ImageUrl" style="width:250px" />
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">ImageFile</label>
            <input asp-for="ImageFile" class="form-control">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary">Save adn Update</button>
    </form>
</div>