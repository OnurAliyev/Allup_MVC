@model List<Brand>

@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="row align-items-center justify-content-between">
        <h1>Brands:</h1>
        <a asp-action="create" asp-controller="brand" class="btn btn-outline-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Name</td>
                    <td>
                        <img style="width:150px" src="~/uploads/brands/@item.BrandLogoUrl" />
                    </td>
                    <td>
                        <a asp-action="update" asp-controller="brand" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                        <a asp-action="delete" asp-controller="brand" asp-route-id="@item.Id" class="btn btn-outline-danger delete-btn">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>